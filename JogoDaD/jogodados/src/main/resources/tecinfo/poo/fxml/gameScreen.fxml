<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tecinfo.poo.controller.GameController">
    <Label text="Lançamento de Dados" />
    <HBox spacing="10.0">
        <ImageView fx:id="dice1ImageView" fitWidth="100.0" fitHeight="100.0" />
        <ImageView fx:id="dice2ImageView" fitWidth="100.0" fitHeight="100.0" />
    </HBox>
    <Label fx:id="resultLabel" text="Total: " />
    <Label fx:id="winnerLabel" text="Vencedor: " />
    <Button text="Rolar Dados" onAction="#handleRollDice" />
    <Button text="Ver Ranking" onAction="#handleViewRanking" />
    <Button text="Voltar ao Início" onAction="#handleBackToStart" />
</VBox>
